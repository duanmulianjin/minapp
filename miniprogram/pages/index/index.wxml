<!--pages/home/home.wxml-->
<view class="home-main use-base-style">
  <swiper class="swiper" indicator-dots autoplay interval="5000" duration="500">
    <block wx:for="{{topSlides}}" wx:key="index">
      <swiper-item>
        <view class="swiper-item">
          <image src="{{item.imgUrl}}"></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view class="menu-box">
    <view data-url="{{item.url}}" data-type="{{item.type}}" class="menu-item" wx:for="{{menuList}}" wx:key="index" bindtap="doMenuTap">
      <image src="{{item.icon}}"></image>
      <view>{{item.title}}</view>
    </view>
  </view>
</view>